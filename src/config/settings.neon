# 语言包
locale:     zh_CN.utf8

# 时间配置
time:
  timezone:   null    # 设null或不设此键使用全局设置 设Asia/Shanghai等值则手动控制

# 调试配置
debug:
  actionError:
    show:   true
prod < debug:
  actionError:
    show:   false

# 慢请求日志
slowLog:
  limit: 20           # 慢查询日志限时，单位毫秒

# catcher类
catcher:
  $instance:
    Combi\Core\Trace\Catcher(true)
